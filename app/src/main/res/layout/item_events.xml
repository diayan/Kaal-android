<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="events"
            type="com.diayan.kaal.data.model.Event" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/region_cover_imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/colorImagePlaceholder"
                android:contentDescription="@string/event_cover_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mole_national"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/region_name_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_normal"
                android:text="@{events.name}"
                android:textSize="20sp"
                android:elevation="4dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/region_cover_imageView"
                app:layout_constraintEnd_toEndOf="@id/region_cover_imageView"
                app:layout_constraintStart_toStartOf="@id/region_cover_imageView"
                tools:text="Afro Nation 2019" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

