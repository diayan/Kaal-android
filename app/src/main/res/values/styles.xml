<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!--
              requires api 21 and higher
               <item name="android:navigationBarColor">#</item>
       -->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>

        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
    </style>


    <style name="AppNoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!--
              requires api 21 and higher
               <item name="android:navigationBarColor">#</item>
       -->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>

        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
    </style>



    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>


    <style name="Kaal.SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Kaal.AuthenticationGeneralTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonColored" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/twelve_size</item>
        <item name="android:paddingBottom">@dimen/twelve_size</item>
        <item name="backgroundTint">@color/greenLight</item>
        <item name="android:text">@string/title_button</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Kaal.MaterialButton.Authentication" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/radius_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/radius_medium</item>
        <item name="android:text">@string/title_button</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="Kaal.MaterialButton.AuthPreview" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/twelve_size</item>
        <item name="android:paddingBottom">@dimen/twelve_size</item>
        <item name="backgroundTint">@color/colorWhiteGrey</item>
        <item name="android:text">@string/title_button</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
